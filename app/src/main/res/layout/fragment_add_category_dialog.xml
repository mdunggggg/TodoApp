<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".Dialog.AddCategoryDialog">

    <View
        android:layout_width="48dp"
        android:layout_height="4dp"
        android:background="@drawable/bg_handle"
        android:layout_gravity="center_horizontal"
        />
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_category_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_name_of_category"
        android:inputType="textCapSentences|textShortMessage"
        android:minHeight="64dp"
        android:fontFamily="@font/inter_medium"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_set_color_category"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="-1dp"
            android:text="@string/color"
            app:icon="@drawable/ic_paint"

            />

        <ImageView
            android:id="@+id/bt_add_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_confirm"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</LinearLayout>
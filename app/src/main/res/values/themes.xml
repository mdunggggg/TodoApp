<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TodoApp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="backgroundColor">#F1E2E2</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
    <style name="CustomCheckBox" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_selector</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="CustomSearchView" parent="Widget.Material3.SearchView">
        <!-- Add any other custom attributes you want to set for your SearchView here -->
        <item name="materialThemeOverlay">@style/CustomThemeOverlay</item>
    </style>
    <style name="CustomThemeOverlay">
        <!-- Add any custom attributes or overrides you want here -->
        <item name="elevationOverlayEnabled">false</item>
    </style>
    <style name="Theme.TodoApp" parent="Base.Theme.TodoApp" />
    <style name="MyCustomDrawableStyle">
        <item name="android:background">@color/white</item>
    </style>
    <style name="EditTextHint" parent="TextAppearance.AppCompat">
        <item name="colorAccent">@android:color/darker_gray</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">@android:color/darker_gray</item>
        <item name="colorControlHighlight">@android:color/darker_gray</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">8sp</item>
        <item name="colorPrimary">@color/gray</item>
    </style>


</resources>